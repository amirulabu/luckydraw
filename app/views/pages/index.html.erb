<div class="center jumbotron">
	<h1>Lucky Draw</h1>

	<% if user_signed_in? %>
	<p><%= @lucky_person.name %></p>
	<p><%= @lucky_person_petid %></p> 
	<button type="button" class="btn btn-primary btn-lg" id="load" data-loading-text="<i class='fa fa-spinner fa-spin '></i> Selecting Winner">Draw now</button>
	<% end %>
	

</div>

<div class="row">
	<div class="col-md-6">
		<div class="well well-lg">
			<h2>List name belum cabut</h2>
			<br>
			<ul class="list-name">

				<% @people.each do |person| %>
				<li>
					Person name: <%= person.name %>
				</li>
				<hr>
				<% end %>
			</ul>	

		</div>


	</div>
	
	<div class="col-md-6">
		<div class="well well-lg">
			<h2>List name dah kena cabut</h2>
			<br>
			...

		</div>
	</div>

</div>

<script type="text/javascript">

	$('.btn').on('click', function() {
		var $this = $(this);
		$this.button('loading');
		setTimeout(function() {
			$this.button('reset');
		}, 2000);
	});

</script>
